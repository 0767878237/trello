<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Task Group Views -->
    <record id="view_task_group_form" model="ir.ui.view">
        <field name="name">task.group.form</field>
        <field name="model">task.group</field>
        <field name="arch" type="xml">
            <form string="Task Group">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tasks" type="object" class="oe_stat_button" icon="fa-tasks">
                            <field name="task_count" string="Tasks" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="color" widget="color_picker" invisible="1"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Group Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_task_group_tree" model="ir.ui.view">
        <field name="name">task.group.tree</field>
        <field name="model">task.group</field>
        <field name="arch" type="xml">
            <tree string="Task Groups" sample="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="task_count"/>
            </tree>
        </field>
    </record>

    <record id="view_task_group_search" model="ir.ui.view">
        <field name="name">task.group.search</field>
        <field name="model">task.group</field>
        <field name="arch" type="xml">
            <search string="Search Task Groups">
                <field name="name"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_task_group" model="ir.actions.act_window">
        <field name="name">Task Groups</field>
        <field name="res_model">task.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first task group!
            </p>
        </field>
    </record>

    <!-- Task Views -->
    <record id="view_task_form" model="ir.ui.view">
        <field name="name">task.task.form</field>
        <field name="model">task.task</field>
        <field name="arch" type="xml">
            <form string="Task">
                <header>
                    <button name="action_in_progress" string="Start" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_done" string="Mark Done" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['done', 'cancelled'])]}"/>
                    <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'in', ['done', 'cancelled'])]}"/>
                    <button name="action_draft" string="Reset to Draft" type="object" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Task Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="group_id"/>
                            <field name="user_id"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="deadline"/>
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Add a description here..."/>
                        </page>
                        <page string="Tags">
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">task.task.tree</field>
        <field name="model">task.task</field>
        <field name="arch" type="xml">
            <tree string="Tasks" sample="1" decoration-muted="state == 'cancelled'" decoration-success="state == 'done'" decoration-info="state == 'in_progress'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="group_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="priority" widget="priority"/>
                <field name="deadline"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">task.task.kanban</field>
        <field name="model">task.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="group_id" records_draggable="1" class="o_kanban_small_column" sample="1">
                <field name="group_id"/>
                <field name="color"/>
                <field name="priority"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <t t-if="widget.editable"><a type="edit" class="dropdown-item">Edit</a></t>
                                            <t t-if="widget.deletable"><a type="delete" class="dropdown-item">Delete</a></t>
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'in_progress': 'info', 'done': 'success', 'cancelled': 'danger'}}"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                        <field name="deadline" widget="date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_task_calendar" model="ir.ui.view">
        <field name="name">task.task.calendar</field>
        <field name="model">task.task</field>
        <field name="arch" type="xml">
            <calendar string="Tasks" date_start="deadline" color="group_id">
                <field name="name"/>
                <field name="group_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_task_search" model="ir.ui.view">
        <field name="name">task.task.search</field>
        <field name="model">task.task</field>
        <field name="arch" type="xml">
            <search string="Search Tasks">
                <field name="name"/>
                <field name="group_id"/>
                <field name="user_id"/>
                <field name="tag_ids"/>
                <separator/>
                <filter string="My Tasks" name="my_tasks" domain="[('user_id', '=', uid)]"/>
                <filter string="Unassigned" name="unassigned" domain="[('user_id', '=', False)]"/>
                <separator/>
                <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['2', '3'])]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Deadline" name="deadline" date="deadline"/>
                <group expand="0" string="Group By">
                    <filter string="Group" name="group" context="{'group_by': 'group_id'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                    <filter string="Assigned to" name="assigned_to" context="{'group_by': 'user_id'}"/>
                    <filter string="Priority" name="priority" context="{'group_by': 'priority'}"/>
                    <filter string="Deadline" name="deadline_group" context="{'group_by': 'deadline'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_task" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">task.task</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="context">{'search_default_my_tasks': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first task!
            </p>
        </field>
    </record>

    <!-- Tag Views -->
    <record id="view_task_tag_form" model="ir.ui.view">
        <field name="name">task.tag.form</field>
        <field name="model">task.tag</field>
        <field name="arch" type="xml">
            <form string="Task Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_task_tag_tree" model="ir.ui.view">
        <field name="name">task.tag.tree</field>
        <field name="model">task.tag</field>
        <field name="arch" type="xml">
            <tree string="Task Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <record id="action_task_tag" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">task.tag</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
