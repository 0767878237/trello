<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_task_management_root"
        name="Task Management"
        web_icon="task_management,static/description/icon.png"
        sequence="40"/>

    <!-- Tasks Menu -->
    <menuitem id="menu_task_management_tasks"
        name="Tasks"
        parent="menu_task_management_root"
        sequence="1"/>

    <menuitem id="menu_task_management_task_list"
        name="My Tasks"
        parent="menu_task_management_tasks"
        action="action_task"
        sequence="1"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_task_management_config"
        name="Configuration"
        parent="menu_task_management_root"
        sequence="100"/>

    <menuitem id="menu_task_management_groups"
        name="Task Groups"
        parent="menu_task_management_config"
        action="action_task_group"
        sequence="1"/>

    <menuitem id="menu_task_management_tags"
        name="Tags"
        parent="menu_task_management_config"
        action="action_task_tag"
        sequence="2"/>
</odoo>
